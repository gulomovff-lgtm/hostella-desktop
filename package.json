{
  "name": "hostella-desktop",
  "private": true,
  "version": "0.1.8",
  "description": "Hostella Management System",
  "author": "Fazliddin Gulomov",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run react-start\" \"npm run electron-start\"",
    "react-start": "vite",
    "electron-start": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "build:electron": "vite build --config vite.electron.config.js",
    "clean": "npx rimraf release",
    "dist": "npm run clean && npm run build:electron && electron-builder build --publish always"
  },
  "build": {
    "appId": "com.hostella.app",
    "productName": "Hostella",
    "copyright": "Copyright Â© 2026",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gulomovff-lgtm",
        "repo": "hostella-desktop"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/ic.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Hostella",
      "runAfterFinish": true,
      "installerSidebar": "assets/installerSidebar.bmp",
      "installerHeader": "assets/installerHeader.bmp",
      "uninstallerSidebar": "assets/installerSidebar.bmp"
    }
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "firebase": "^10.0.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-country-flag": "^3.1.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.13.0",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^35.7.5",
    "electron-builder": "^26.8.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.3.1",
    "wait-on": "^7.0.0"
  }
}
