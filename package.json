{
  "name": "hostella-desktop",
  "private": true,
  "version": "0.0.1",
  "description": "Hostella Management System",
  "author": "Fazliddin Gulomov",
  "main": "electron/main.js",
  "homepage": "./",
      "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run react-start\" \"npm run electron-start\"",
    "react-start": "vite",
    "electron-start": "wait-on tcp:5173 && electron .",
    "build": "vite build",
    "dist": "npm run build && electron-builder build --publish always"
  },
  "build": {
    "appId": "com.hostella.app",
    "productName": "Hostella",
    "copyright": "Copyright Â© 2026",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "gulomovff-lgtm",
        "repo": "hostella-desktop"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "firebase": "^10.0.0",
    "lucide-react": "^0.300.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^3.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  }
}